<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AccommodationListServlet</servlet-name>
        <servlet-class>it.unitn.disi.webarch.mstolin.webapp.controller.accommodation.AccommodationResultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccommodationListServlet</servlet-name>
        <url-pattern>/results</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccommodationSearchServlet</servlet-name>
        <servlet-class>it.unitn.disi.webarch.mstolin.webapp.controller.accommodation.AccommodationSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccommodationSearchServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservationSummaryServlet</servlet-name>
        <servlet-class>it.unitn.disi.webarch.mstolin.webapp.controller.reservation.ReservationSummaryServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationSummaryServlet</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservationConfirmServlet</servlet-name>
        <servlet-class>it.unitn.disi.webarch.mstolin.webapp.controller.reservation.ReservationConfirmServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationConfirmServlet</servlet-name>
        <url-pattern>/reservation/confirm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservationListServlet</servlet-name>
        <servlet-class>it.unitn.disi.webarch.mstolin.webapp.controller.reservation.ReservationListServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationListServlet</servlet-name>
        <url-pattern>/reservations</url-pattern>
    </servlet-mapping>
</web-app>