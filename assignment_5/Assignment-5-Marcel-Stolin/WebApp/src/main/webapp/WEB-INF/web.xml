<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AccommodationListServlet</servlet-name>
        <servlet-class>it.unitn.disi.webarch.mstolin.webapp.controller.AccommodationListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccommodationListServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccommodationPageServlet</servlet-name>
        <servlet-class>it.unitn.disi.webarch.mstolin.webapp.controller.AccommodationPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccommodationPageServlet</servlet-name>
        <url-pattern>/accommodation/*</url-pattern>
    </servlet-mapping>
</web-app>