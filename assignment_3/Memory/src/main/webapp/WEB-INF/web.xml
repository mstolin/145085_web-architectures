<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- WelcomeServlet -->
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>it.unitn.disi.webarch.memory.memory.controller.welcome.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <!-- WelcomeFilter -->

    <!-- MemoryServlet -->
    <servlet>
        <servlet-name>MemoryServlet</servlet-name>
        <servlet-class>it.unitn.disi.webarch.memory.memory.controller.memory.MemoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemoryServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


</web-app>